{
  "manifest_version": 3,
  "name": "xhs2feishu",
  "version": "1.0.0",
  "description": "小红书数据采集并同步到飞书多维表格",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "*://www.xiaohongshu.com/*",
    "*://open.feishu.cn/*",
    "*://api.coze.cn/*",
    "*://api.keenchase.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [{
    "matches": ["*://www.xiaohongshu.com/*"],
    "js": ["content.js"]
  }],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  }
}
